<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            url="http://in.relation.to/Tutorials/IntroductionToCeylon"
            icon="icons/template_obj.gif"
            extensions="ceylon"
            description="Say more, more clearly"
            natureID="com.redhat.ceylon.eclipse.ui.imp.nature"
            language="ceylon">
      </language>
   </extension>
   <extension
         id="ceylon-ide.parser"
         name="Ceylon Parser"
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="com.redhat.ceylon.eclipse.imp.parser.CeylonParseController"
            language="ceylon">
      </parser>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer
            class="com.redhat.ceylon.eclipse.imp.tokenColorer.CeylonTokenColorer"
            language="ceylon">
      </tokenColorer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.modelTreeBuilder">
      <treeBuilder
            class="com.redhat.ceylon.eclipse.imp.treeModelBuilder.CeylonTreeModelBuilder"
            language="ceylon">
      </treeBuilder>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.labelProvider">
      <labelProvider
            class="com.redhat.ceylon.eclipse.imp.treeModelBuilder.CeylonLabelProvider"
            language="ceylon">
      </labelProvider>
   </extension>
   <extension
         id="ceylon.imp.builder"
         name="Ceylon Builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="com.redhat.ceylon.eclipse.imp.builder.CeylonBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="imp.nature"
         name="Ceylon Nature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="com.redhat.ceylon.eclipse.ui.ceylon.imp.builder">
      </builder>
      <runtime>
         <run
               class="com.redhat.ceylon.eclipse.imp.builder.CeylonNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="ceylon.imp.builder.problem"
         name="Ceylon Error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.jdt.core.IJavaProject"
            adaptable="true"
            nameFilter="*"
            id="ceylon.imp.projectContextMenu">
         <action
               label="Enable Ceylon Builder"
               tooltip="Enable the ceylon builder for this project"
               class="com.redhat.ceylon.eclipse.imp.actions.EnableCeylonNature"
               id="ceylon.imp.actions.enableNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.referenceResolvers">
      <referenceResolver
            class="com.redhat.ceylon.eclipse.imp.core.CeylonReferenceResolver"
            language="ceylon">
      </referenceResolver>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.documentationProvider">
      <docProvider
            class="com.redhat.ceylon.eclipse.imp.editor.CeylonDocumentationProvider"
            language="ceylon">
      </docProvider>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.contentProposer">
      <proposer
            class="com.redhat.ceylon.eclipse.imp.contentProposer.CeylonContentProposer"
            language="ceylon">
      </proposer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.markOccurrences">
      <occurrenceIdentifier
            class="com.redhat.ceylon.eclipse.imp.occurrenceMarker.CeylonOccurrenceMarker"
            language="ceylon">
      </occurrenceIdentifier>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.foldingUpdater">
      <foldingUpdater
            class="com.redhat.ceylon.eclipse.imp.foldingUpdater.CeylonFoldingUpdater"
            language="ceylon">
      </foldingUpdater>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.refactoringContributions">
      <refactoringContributor
            class="com.redhat.ceylon.eclipse.imp.refactoring.RefactoringContributor"
            language="ceylon">
      </refactoringContributor>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.editorActionContributions">
      <editorActionContributor
            class="com.redhat.ceylon.eclipse.imp.editorActionContributions.CeylonEditorActionContributions"
            language="ceylon">
      </editorActionContributor>
   </extension>
   <extension
         id="com.redhat.ceylon.ui.searchResults"
         point="org.eclipse.search.searchResultViewPages">
      <viewPage
            class="com.redhat.ceylon.eclipse.imp.editorActionContributions.CeylonSearchResultPage"
            searchResultClass="com.redhat.ceylon.eclipse.imp.editorActionContributions.CeylonSearchResult"
            id="org.eclipse.search.searchResultViewPage">
      </viewPage>
   </extension>
   <extension
         point="org.eclipse.search.searchPages">
      <page
            showScopeSection="true"
            canSearchEnclosingProjects="true"
            label="Ceylon Search"
            enabled="true"
            extensions="ceylon:90"
            class="com.redhat.ceylon.eclipse.imp.editorActionContributions.CeylonSearchDialogPage"
            sizeHint="460,160"
            id="org.redhat.ceylon.ui.searchPage">
      </page>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.autoEditStrategy">
      <autoEditStrategy
            class="com.redhat.ceylon.eclipse.imp.autoEditStrategy.CeylonAutoEditStrategy"
            language="ceylon">
      </autoEditStrategy>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.editorService">
         <editorService
               language="ceylon"
               class="com.redhat.ceylon.eclipse.imp.editor.CeylonAnnotationCreator">
         </editorService>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
         name="com.redhat.ceylon.eclipse.ui.refinement.formal"
         markerSeverity="0">
      </type>
      <type
         name="com.redhat.ceylon.eclipse.ui.refinement.default"
         markerSeverity="0">
      </type>
  </extension>
  <extension point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="com.redhat.ceylon.eclipse.ui.refinement.formal"
            presentationLayer="0"
            contributesToHeader="true"
            includeOnPreferencePage="true"
            label="Ceylon Refinement Indicators"
            textPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.text"
            textPreferenceValue="false"
            colorPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.color"
            colorPreferenceValue="000,255,000"
            verticalRulerPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.ruler"
            verticalRulerPreferenceValue="true"
            overviewRulerPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.overview"
            overviewRulerPreferenceValue="false"
            highlightPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.highlight"
            highlightPreferenceValue="false"
            textStylePreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.textStyle"
            textStylePreferenceValue="BOX"
            icon="icons/implm_co.gif"
            />
      <specification
            annotationType="com.redhat.ceylon.eclipse.ui.refinement.default"
            presentationLayer="0"
            contributesToHeader="true"
            includeOnPreferencePage="true"
            label="Ceylon Refinement Indicators"
            textPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.text"
            textPreferenceValue="false"
            colorPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.color"
            colorPreferenceValue="000,255,000"
            verticalRulerPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.ruler"
            verticalRulerPreferenceValue="true"
            overviewRulerPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.overview"
            overviewRulerPreferenceValue="false"
            highlightPreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.highlight"
            highlightPreferenceValue="false"
            textStylePreferenceKey="com.redhat.ceylon.eclipse.ui.refinement.textStyle"
            textStylePreferenceValue="BOX"
            icon="icons/over_co.gif" 
            />
  </extension>
  <extension point="org.eclipse.ui.editorActions">
        <editorContribution
            targetID="org.eclipse.imp.runtime.impEditor"
            id="com.redhat.ceylon.eclipse.imp.editorActionContributions.ruler">
                <action
                    label="Select Ruler"
                    class="com.redhat.ceylon.eclipse.imp.editorActionContributions.SelectRulerAction"
                    actionID="RulerClick"
                    id="com.redhat.ceylon.eclipse.imp.editorActionContributions.SelectRulerAction">
         </action>
        </editorContribution>
  </extension>
  <extension
        point="org.eclipse.imp.runtime.quickFixAssistant"
        id="com.redhat.ceylon.eclipse.imp.quickfix">
      <quickFixAssistant
          class="com.redhat.ceylon.eclipse.imp.quickfix.QuickFixAssistant"
          language="ceylon">
          <supportedMarkerType
              markerType="org.eclipse.imp.editor.parseAnnotation.error"/>
          <supportedMarkerType 
              markerType="com.redhat.ceylon.eclipse.ui.ceylon.imp.builder.problem"/>
      </quickFixAssistant>
  </extension>
</plugin>

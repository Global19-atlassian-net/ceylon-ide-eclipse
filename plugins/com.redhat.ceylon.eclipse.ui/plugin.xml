<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.imp.runtime.languageDescription">
      <language
            url="http://in.relation.to/Tutorials/IntroductionToCeylon"
            extensions="ceylon"
            description="The best Java replacement"
            language="ceylon">
      </language>
   </extension>
   <extension
         id="ceylon-ide.parser"
         name="ceylon Parser"
         point="org.eclipse.imp.runtime.parser">
      <parser
            class="com.redhat.ceylon.eclipse.imp.parser.CeylonParseController"
            language="ceylon">
      </parser>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.tokenColorer">
      <tokenColorer
            class="com.redhat.ceylon.eclipse.imp.tokenColorer.CeylonTokenColorer"
            language="ceylon">
      </tokenColorer>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.modelTreeBuilder">
      <treeBuilder
            class="com.redhat.ceylon.eclipse.imp.treeModelBuilder.CeylonTreeModelBuilder"
            language="ceylon">
      </treeBuilder>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.labelProvider">
      <labelProvider
            class="com.redhat.ceylon.eclipse.imp.treeModelBuilder.CeylonLabelProvider"
            language="ceylon">
      </labelProvider>
   </extension>
   <extension
         id="ceylon.imp.builder"
         name="Ceylon builder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="com.redhat.ceylon.eclipse.imp.builder.CeylonBuilder">
            <parameter
                  name="foo"
                  value="bar">
            </parameter>
         </run>
      </builder>
   </extension>
   <extension
         id="imp.nature"
         name="ceylon Nature"
         point="org.eclipse.core.resources.natures">
      <builder
            id="com.redhat.ceylon.eclipse.ui.ceylon.imp.builder">
      </builder>
      <runtime>
         <run
               class="com.redhat.ceylon.eclipse.imp.builder.CeylonNature">
         </run>
      </runtime>
   </extension>
   <extension
         id="ceylon.imp.builder.problem"
         name="ceylon Error"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            objectClass="org.eclipse.core.resources.IProject"
            adaptable="true"
            nameFilter="*"
            id="ceylon.imp.projectContextMenu">
         <action
               label="Enable ceylon Builder"
               tooltip="Enable the ceylon builder for this project"
               class="com.redhat.ceylon.eclipse.imp.actions.EnableCeylonNature"
               id="ceylon.imp.actions.enableNatureAction">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.referenceResolvers">
      <referenceResolver
            class="com.redhat.ceylon.eclipse.imp.core.CeylonReferenceResolver"
            language="ceylon">
      </referenceResolver>
   </extension>
   <extension
         point="org.eclipse.imp.runtime.documentationProvider">
      <docProvider
            class="com.redhat.ceylon.eclipse.imp.editor.CeylonDocumentationProvider"
            language="ceylon">
      </docProvider>
   </extension>

</plugin>
